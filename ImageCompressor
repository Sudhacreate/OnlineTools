    <main>
        <section id="compression-tool">
            <input type="file" id="image-input" accept="image/*">
            <label for="compression-level">Compression Level (0 = lowest, 1 = highest):</label>
            <input type="range" id="compression-level" min="0" max="1" step="0.1" value="0.5">
            <label for="output-size">Output Size (KB):</label>
            <input type="number" id="output-size" placeholder="Enter size in KB">
            <button id="compress-btn">Compress Image</button>
            <div id="processing-message">
                <div class="spinner"></div>
                Processing image, please wait...
            </div>
            <div id="output-image"></div>
            <a id="download-btn" download="compressed-image.jpg">Download Compressed Image</a>
        </section>
